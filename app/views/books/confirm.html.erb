<div>
  <span>title : </span> <%= @book.title %>
</div>
<div>
  <span>author : </span> <%= @book.author %>
</div>
<div>
  <span>published : </span> <%= @book.published ? 'YES' : 'NO' %>
</div>
<%= form_for @book, url: {action: :create} do |f|%>
  <%= f.hidden_field :title, value: @book.title %>
  <%= f.hidden_field :author, value: @book.author %>
  <%= f.hidden_field :published, value: @book.published %>
  <button>create<button>
<% end %>
